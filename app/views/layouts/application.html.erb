<!DOCTYPE html>
<html>
<head>
  <title>Student Internships</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
</head>
<body>
  <%= render 'layouts/header' %>
  <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "pitch it", root_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%=link_to "Home", root_path%></li>
			<li><%=link_to "Employers", employers_path%></li>
			<li><%=link_to "Students", students_path%></li>
			<li><%=link_to "Internships", jobs_path%></li>
			<li><%=link_to "Add New Job", new_job_path%></li>
			<li><%=mail_to "daryl.oregan@mydit.ie", "Contact us"%></li>	
			<%if !signed_in? %>
				<li><%=link_to "Student log In", login_path %></li>
				<li><%=link_to "Employer log In", emplogin_path %></li>
			<% else %>
				<li>Signed in as <%= @current_student.first_name%></li>
				<li><%=link_to "Student Sign Out", logout_path%></li>
			<% end %>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">

<% flash.each do |key,value| %>
	<div class= "flash <%= key%>">
		<%= value %>
	</div>
<%end%>

<%= yield %>
      <%= render 'layouts/footer' %>

</body>
</html>

